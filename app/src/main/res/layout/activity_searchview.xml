<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/comm_white_title" />

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:background="@color/common_gray_bg">

        <RelativeLayout
            android:id="@+id/rlSearchFrameDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical">

            <com.jzg.erp.widget.ClearableEditText
                android:id="@+id/etSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/tv_cancle"
                android:background="@mipmap/bg_002"
                android:drawableLeft="@mipmap/sousuo"
                android:imeOptions="actionSearch"
                android:drawablePadding="10dp"
                android:hint="@string/search_message"
                android:padding="10dp"
                android:singleLine="true" />

            <TextView
                android:id="@+id/tv_cancle"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:text="搜索"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />

        </RelativeLayout>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.jzg.erp.widget.XRecyclerView
            android:id="@+id/mrecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"></com.jzg.erp.widget.XRecyclerView>

        <com.jzg.erp.widget.SpecifiedTextView
            android:id="@+id/text_tishi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="150dp"
            android:gravity="center"
            android:textSize="18sp" />
    </RelativeLayout>

</LinearLayout>
