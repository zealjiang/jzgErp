<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"  
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:id="@+id/ll_more"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" 
	    android:orientation="vertical" >
    
	    <RelativeLayout 
	           android:id="@+id/rl_synchronization"
	           style="@style/page_edge_item_style"
	           android:background="@drawable/corner_round_top"
	            >
	
	           <TextView
	               android:id="@+id/tv_synchronization"
	               style="@style/normal_item_medium_size_tv_style"
	               android:layout_centerInParent="true"
	               android:text="item 1"
	               />
	
	    </RelativeLayout>
	
	    <View
	        android:layout_width="match_parent"
	        android:layout_height="1px"
	        android:background="@color/common_gray_line" />
	
	    <RelativeLayout 
	           android:id="@+id/rl_modify_balance"
	           style="@style/page_edge_item_style" 
	           android:background="#fcfcfc"
	           >
	
	           <TextView
	               android:id="@+id/tv_modify_balance"
	               style="@style/normal_item_medium_size_tv_style"
	               android:layout_centerInParent="true"
	               android:text="item 2" />
	
	    </RelativeLayout>
	       
	    <View
	        android:id="@+id/line_2"
	        android:layout_width="match_parent"
	        android:layout_height="1px"
	        android:background="@color/common_gray_line" />
	    
	    <RelativeLayout 
	           android:id="@+id/rl_update_record"
	           style="@style/page_edge_item_style" 
	           android:background="#fcfcfc"
	           >
			
	           <TextView
	               android:id="@+id/tv_update_record"
	               style="@style/normal_item_medium_size_tv_style"
	               android:layout_centerInParent="true"
	               android:text="item 3" />
	
	    </RelativeLayout>
	       
	    <View
	        android:id="@+id/line_3"
	        android:layout_width="match_parent"
	        android:layout_height="1px"
	        android:background="@color/common_gray_line" />
	    
	    <RelativeLayout 
	           android:id="@+id/rl_delete"
	           style="@style/page_edge_item_style" 
	           android:background="@drawable/corner_round_bottom"
	           >
	
	           <TextView
	               android:id="@+id/tv_delete"
	               style="@style/normal_item_medium_size_tv_style"
	               android:layout_centerInParent="true"
	               android:text="item 4" />
	
	    </RelativeLayout>
    </LinearLayout>
    <RelativeLayout 
           android:id="@+id/rl_only"
           style="@style/page_edge_item_style" 
           android:background="@drawable/corner_round"
           android:visibility="gone"
           >

           <TextView
               android:id="@+id/tv_only"
               style="@style/normal_item_medium_size_tv_style"
               android:layout_centerInParent="true"
               android:text="" />
	
	 </RelativeLayout>
       
   	<TextView
           android:layout_width="fill_parent"
           android:layout_height="5dip" 
           android:background="#00ffffff"/>
    
    <RelativeLayout 
           android:id="@+id/rl_cancel"
           style="@style/page_edge_item_style" 
           android:background="@drawable/corner_round"
           >

           <TextView
               android:id="@+id/tv_cancel"
               style="@style/normal_item_medium_size_tv_style"
               android:layout_centerInParent="true"       
               android:text="取消" />

    </RelativeLayout>
       
   	<TextView
           android:layout_width="fill_parent"
           android:layout_height="15dip" 
           android:background="#00ffffff"/>
</LinearLayout>
